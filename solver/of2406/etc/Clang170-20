# -*- sh -*-
# Preferences for system clang-xxx, label-size=32
export WM_COMPILER_TYPE=system

export WM_COMPILER=Clang170++20
export WM_COMPILE_CONTROL="version=17.0 +lld +strict"

export WM_LABEL_SIZE=32

unset FOAM_EXTRA_CFLAGS FOAM_EXTRA_CXXFLAGS FOAM_EXTRA_LDFLAGS
export FOAM_EXTRA_CXXFLAGS='-std=c++20'

## Use system openmpi
export WM_MPLIB=SYSTEMOPENMPI

