solvers
{
    p
    {
        solver          GAMG;
        smoother        GaussSeidel;

        //solver          PBiCGStab;
        //preconditioner  DILU;

        tolerance       1e-6;
        relTol          0.1;
    }

    "(U|k|omega|e)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;

        //solver          smoothSolver;
        //smoother        symGaussSeidel;

        tolerance       1e-6;
        relTol          0.1;
    }
    rho
    {
        solver          diagonal;
        
    }
}

SIMPLE
{
    transoinc           yes;
    consistent          yes;

    residualControl
    {
        p               1e-4;
        U               1e-4;
        "(k|omega|e)"   1e-4;
    }

    nNonOrthogonalCorrectors 2;
    pMinFactor      0.1;
    pMaxFactor      2;

    //pMin            10000;
    //pMax            2000000;
}

